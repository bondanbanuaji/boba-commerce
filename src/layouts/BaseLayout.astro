---
import { ToastContainer } from '@components/react/ui/Toast';
import Header from '@components/astro/layout/Header.astro';
import Footer from '@components/astro/layout/Footer.astro';
import '@styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Boba Commerce - The best boba in town" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Outfit:wght@500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-boba-50/50">
    <Header />
    
    <main class="flex-1 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>

    <Footer />
    
    <ToastContainer client:load />
    
    <script>
       // Global initialization
       import { hydrateCart } from '@stores/cart';
       hydrateCart();
    </script>
  </body>
</html>
