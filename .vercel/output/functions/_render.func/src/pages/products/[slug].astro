---
import BaseLayout from '@layouts/BaseLayout.astro';
import { ProductGallery } from '@components/react/product/ProductGallery';
import { ProductDetailForm } from '@components/react/product/ProductDetailForm';
import ProductCard from '@components/astro/product/ProductCard.astro';
import { getProductBySlug, getRelatedProducts } from '@lib/db/queries/products';

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/products');
}

const product = await getProductBySlug(slug);

if (!product) {
  return Astro.redirect('/404');
}

const relatedProducts = await getRelatedProducts(product.id);

// Prepare images array
const images = [product.image]; 
// In a real app we might have more images in the DB
if (product.image.includes('unsplash')) {
    images.push(product.image + '&fit=crop&w=800&q=60'); // Just duplicating for gallery demo
    images.push(product.image + '&fit=crop&w=800&q=40');
}
---

<BaseLayout title={`${product.name} | Boba Commerce`}>
  {/* Breadcrumb */}
  <nav class="flex text-sm text-gray-500 mb-8">
    <a href="/" class="hover:text-boba-primary">Home</a>
    <span class="mx-2">/</span>
    <a href="/products" class="hover:text-boba-primary">Products</a>
    <span class="mx-2">/</span>
    <span class="text-gray-900 font-medium">{product.name}</span>
  </nav>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
    {/* Gallery - Client Island */}
    <ProductGallery client:load images={images} name={product.name} />

    {/* Product Info */}
    <div class="flex flex-col">
      <h1 class="text-4xl font-display font-bold text-gray-900 mb-2">{product.name}</h1>
      <p class="text-2xl text-boba-primary font-bold mb-6">${product.price.toFixed(2)}</p>
      
      <div class="prose prose-sm text-gray-600 mb-8">
        <p>{product.description}</p>
      </div>

      <div class="space-y-6 p-6 bg-white rounded-2xl shadow-sm border border-gray-100">
        
        {/* Interactive Add to Cart Form - Client Island */}
        <ProductDetailForm client:load product={product} />
        
        {/* Benefits */}
        <div class="grid grid-cols-2 gap-4 pt-6 border-t border-gray-100">
           <div class="flex items-center gap-2 text-sm text-gray-600">
             <svg class="w-5 h-5 text-boba-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
             <span>Premium Quality</span>
           </div>
           <div class="flex items-center gap-2 text-sm text-gray-600">
             <svg class="w-5 h-5 text-boba-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
             <span>Fast Shipping</span>
           </div>
        </div>
      </div>
    </div>
  </div>

  {/* Related Products */}
  {relatedProducts.length > 0 && (
    <section>
      <h2 class="text-2xl font-display font-bold mb-6">You Might Also Like</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {relatedProducts.map(p => (
           <ProductCard product={p} />
        ))}
      </div>
    </section>
  )}
</BaseLayout>
