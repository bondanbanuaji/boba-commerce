---
import BaseLayout from '@layouts/BaseLayout.astro';
import { RegisterForm } from '@components/react/auth/RegisterForm';
---

<BaseLayout title="Create Account | Boba Commerce">
  <div class="min-h-[60vh] flex flex-col items-center justify-center py-12">
    <div class="w-full max-w-md bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
      <div class="text-center mb-8">
        <h1 class="text-2xl font-display font-bold text-gray-900">Create Account</h1>
        <p class="text-sm text-gray-500 mt-2">Join the Boba Commerce community</p>
      </div>

      <RegisterForm client:load />

      <div class="mt-6 text-center text-sm text-gray-600">
        Already have an account?{' '}
        <a href="/auth/login" class="text-boba-primary font-medium hover:underline">
          Sign in
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
